[project]
authors = ["Akhil <akhil.sathuluri@tum.de>"]
channels = ["conda-forge"]
name = "sim_a_splat"
platforms = ["linux-64"]
version = "0.1.0"

[tasks]
post_install = "pip install viser==0.2.23"

[dependencies]
python = "3.10.*"
matplotlib = ">=3.10.1,<4"
plotly = ">=6.0.0,<7"
numpy = ">=2.2.3,<3"
urchin = ">=0.0.29,<0.0.30"
pygame = ">=2.6.1,<3"
pymunk = ">=6.10.0,<7"
pip = ">=25.0.1,<26"
meshio = ">=5.3.5,<6"
gymnasium = ">=1.0.0,<2"
ipykernel = ">=6.29.5,<7"
ipympl = ">=0.9.6,<0.10"
ipython = ">=8.33.0,<9"
jupyter = ">=1.1.1,<2"
zarr = ">=2.18.3,<3"
cudatoolkit = ">=11.8.0,<12"
setuptools = ">=78.1.0,<79"
libxcrypt = ">=4.4.36,<5"


[pypi-dependencies]
nerfstudio = { git = "git+https://github.com/akhilsathuluri/nerfstudio.git"}
amo-urdf = { git = "git+https://github.com/ami-iit/amo_urdf.git" }
sak = { path = "../sak", editable = true }
drake = ">=1.38.0, <2"
open3d = ">=0.19.0, <0.20"
gsplat = {git = "https://github.com/nerfstudio-project/gsplat.git", rev = "86dd00c"}
torch = "*"
torchvision = ">=0.21.0, <0.22"

[system-requirements]
libc = "2.35"
cuda = "12"
